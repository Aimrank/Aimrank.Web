@using Aimrank.Application.Queries.GetMatchesHistory
@model IEnumerable<MatchHistoryDto>

@{
    ViewData["Title"] = "Aimrank";
}

<div class="content">
    <div class="column">
        <h3>Scoreboard</h3>
        <div id="scoreboard"></div>
        <br />
        <h3>Matches history</h3>
        <table class="history-table">
            <tr>
                <th>Team 1</th>
                <th>Score</th>
                <th></th>
                <th>Score</th>
                <th>Team 2</th>
            </tr>
            @foreach (var match in Model)
            {
                <tr>
                    <td class="@(match.ScoreT > match.ScoreCT ? "winner" : "loser")">@match.TeamNameT</td>
                    <td class="@(match.ScoreT > match.ScoreCT ? "winner" : "loser")">@match.ScoreT</td>
                    <td><div style="width: 100px;"></div></td>
                    <td class="@(match.ScoreCT > match.ScoreT ? "winner" : "loser")">@match.ScoreCT</td>
                    <td class="@(match.ScoreCT > match.ScoreT ? "winner" : "loser")">@match.TeamNameCT</td>
                </tr>
            }
        </table>
    </div>
    <div class="column">
        <h3>Actions</h3>
    </div>
</div>

